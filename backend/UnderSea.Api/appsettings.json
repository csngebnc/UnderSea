{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UnderSeaDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "DefaultHangfireConnection": "Server=(localdb)\\mssqllocaldb;Database=HangfireUnderSeaDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "You user identifier",
        "Required": true,
        "UserClaims": [ "sub" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "undersea-api",
        "DisplayName": "UnderSea API",
        "Scopes": [
          "api-openid"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "api-openid",
        "DisplayName": "Api hozzáférés",
        "Description": "Minden endpoint használható."
      }
    ],
    "Clients": [
      {
        "ClientId": "undersea-swagger",
        "ClientName": "The swagger client of the application",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": true,
        "AllowedScopes": [
          "openid",
          "api-openid"
        ],
        "RedirectUris": [
          "http://localhost:5000/swagger/oauth2-redirect.html",
          "https://localhost:5001/swagger/oauth2-redirect.html"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:5000",
          "https://localhost:5001"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      },
      {
        "ClientId": "undersea-angular",
        "ClientName": "UnderSea",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "api-openid"
        ],

        "RedirectUris": [
          "http://localhost:4200"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4200"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      }
    ]
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:4200",
    "https://localhost:4200"
  ],
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Audience": "undersea-api"
  }
}
